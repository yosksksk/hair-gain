<%= form_for(@review, url: product_reviews_path) do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>

    <%= f.label :content %>
    <%= f.text_area :content, class: 'form-control' %>

    <%= f.label :star %>
    <%= f.number_field :star, class: 'form-control' %>

  <%= f.submit "レビューを投稿する", class: "btn btn-primary" %>
<% end %>
