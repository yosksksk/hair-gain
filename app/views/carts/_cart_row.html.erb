<div class="well">
  <div class="row">
    <div class="col-xs-8">
      <h4>商品名<%= product.name %></h4>
    </div>
    <div class="col-xs-4">
      <%= form_for order_item, remote: true do |f| %>
        <h4 class="text-right">単価: <span style="color: green"><%= order_item.unit_price.to_i %>円</span></h4>
        <div class="row">
          <div class="col-xs-4">
            <%= f.number_field :quantity, value: order_item.quantity.to_i, class: "form-control", min: 1 %>
            <%= f.hidden_field :product_id, value: product.id %>
          </div>
          <div class="col-xs-8 text-right">
            <div class="btn-group">
              <%= f.submit "変更", class: "btn btn-primary" %>
              <%= link_to "取り除く", order_item, { data: { confirm: "カートから [#{order_item.product.name}] を取り除いていいですか？" }, method: :delete, remote: true, class: "btn btn-danger" } %>
            </div>
          </div>
        </div>
        <h4 class="text-right">小計: <span style="color: green"><%= order_item.total_price.to_i %>円</span></h4>
      <% end %>
    </div>
  </div>
</div>
