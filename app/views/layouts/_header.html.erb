<header class="navbar navbar-fixed-top navbar-inverse">
	<div>
		<%= link_to image_tag("logo.png", alt:"hair-gain logo", style:"width:200px;"), root_path %>
	</div>

	<div class="container">
		<nav>
			<ul class="nav navbar-nav navbar-right">
				<li><%= link_to "トップ", root_path %></li>
				<li><%= link_to "商品", products_path %></li>
				<li><%= link_to "予約", "#" %></li>
				<li><%= link_to "チャット", "#" %></li>
			</ul>
		</nav>
	</div>
	<div class="container">
		<% if logged_in? %>
			<li><%= link_to "ユーザ", '#' %></li>
			<li class="dropdown">
				<a href="#" class="dropdown-toggle" data-toggle="dropdown">
					アカウント
					<b class="caret"></b>
				</a>
				<ul class="dropdown-menu">
					<li><%= link_to "プロフィールへ", current_user %></li>
					<li><%= link_to "設定", '#' %></li>
					<li class="divider"></li>
					<li>
						<%= link_to "ログアウト", logout_path, method: "delete" %>
					</li>
				</ul>
			</li>
				<% else %>
				<li><%= link_to "新規登録", signup_path, class: "btn btn-lg btn-primary" %></li>
			<li><%= link_to "ログイン", login_path, class: "btn btn-lg btn-primary" %></li>
		<% end %>
	</div>
</header>
