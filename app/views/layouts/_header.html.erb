<section class="header">
	<div class="title">
		<%= link_to image_tag("logo.png", alt:"hair-gain logo", class: "logo__font"), root_path %>
	</div>
	<nav>
		<ul class="header__nav">
			<li><%= link_to "トップ", root_path %></li>
			<li><%= link_to "商品", products_path %></li>
			<li><%= link_to "予約", "#" %></li>
			<li><%= link_to "チャット", "#" %></li>
			<li><%= link_to "ビデオ通話", "#" %></li>
			<li class="header__nav--right">
				<% if logged_in? %>
					<li><%= link_to "ユーザ", '#' %></li>
					<li class="dropdown">
						<a href="#" class="dropdown-toggle" data-toggle="dropdown">
							アカウント
							<b class="caret"></b>
						</a>
						<ul class="dropdown-menu">
							<li><%= link_to "プロフィールへ", current_user %></li>
							<li><%= link_to "設定", '#' %></li>
							<li class="divider"></li>
							<li>
								<%= link_to "ログアウト", logout_path, method: "delete" %>
							</li>
						</ul>
					</li>
				<% else %>
					<li><%= link_to "新規登録", signup_path %></li>
					<li><%= link_to "ログイン", login_path %></li>
				<% end %>
			</li>
		</ul>
